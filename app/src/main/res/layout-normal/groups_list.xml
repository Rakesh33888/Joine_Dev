<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="168dp"
        android:layout_height="160dp"
        android:id="@+id/relativelayout_group">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:src="@drawable/butterfly"
            android:id="@+id/thumbnail"
            android:scaleType="fitXY"
            android:layout_alignParentStart="true" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/imageinfo"
            android:id="@+id/framelayoutinfo"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#fff"
                android:id="@+id/imgaeinfotxt"
                android:text="Ski"
                android:textSize="12dp"

                android:singleLine="true"
                android:layout_above="@+id/timeinotext"
                android:layout_alignParentStart="true"
                android:layout_marginTop="5dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#fff"
                android:layout_marginTop="5dp"
                android:id="@+id/timeinotext"
                android:textSize="12dp"
                android:singleLine="true"
                android:layout_gravity="center_vertical"
                android:text="20.11.2016 at 6 PM"
                android:layout_alignParentBottom="true" />

        </RelativeLayout>


    </RelativeLayout>
</LinearLayout>