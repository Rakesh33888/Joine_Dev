<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/relativemain"
    android:layout_height="match_parent"
    android:background="@mipmap/screen2bg"
    tools:context="com.brahmasys.bts.joinme.MainActivity">


    <TextView
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:background="@drawable/joinme"
        android:id="@+id/textView"
        android:textSize="20dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="79dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign up with"
        android:textSize="23dp"
        android:textColor="#FDFCFE"
        android:id="@+id/textView2"
        android:layout_marginBottom="141dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:background="@drawable/memberbg"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:id="@+id/frameLayout"
        android:layout_alignParentEnd="true">


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageViewarrow"
            android:layout_marginRight="80dp"
            android:src="@drawable/arrowright"
            android:layout_gravity="right|center_vertical"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/show" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Already a Member"
            android:id="@+id/show"
            android:background="@null"
            android:textColor="#f1e4e4e4"
            android:textAllCaps="false"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_toStartOf="@+id/btn3" />


    </RelativeLayout>

<RelativeLayout
    style="?android:attr/buttonStyleSmall"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/facebook_layout"
    android:layout_marginTop="45dp"
    android:background="@null"
    android:layout_alignTop="@+id/textView2"
    android:layout_alignEnd="@+id/textView2">
    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/facebook"
        android:id="@+id/facebook"

        />

   <!--  <com.facebook.login.widget.LoginButton
       android:id="@+id/login_button"
        android:layout_width="wrap_content"
        android:visibility="gone"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"/> -->

</RelativeLayout>


    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/mail"
        android:id="@+id/mail"
        android:layout_alignTop="@+id/facebook_layout"
        android:layout_alignStart="@+id/textView2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/textView31"
        android:layout_below="@+id/textView"
        android:layout_toEndOf="@+id/mail"
        android:layout_marginTop="82dp"
        android:visibility="gone" />

</RelativeLayout>
