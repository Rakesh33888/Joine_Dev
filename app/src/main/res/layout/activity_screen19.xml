<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScrollView01"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:scrollbars="none" >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#F9F9F9"
    android:layout_height="819dp"
    tools:context="com.example.bts.joinme.Screen19">


    <com.github.siyamed.shapeimageview.CircularImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/firstimage"
        android:visibility="visible"
        android:background="@drawable/picture"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="45dp"
        android:layout_alignParentTop="true"/>
    <com.github.siyamed.shapeimageview.CircularImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/secondimage"
        android:visibility="visible"
        android:background="@drawable/picture"
        android:layout_marginTop="15dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"/>
    <com.github.siyamed.shapeimageview.CircularImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/thrdimage"
        android:visibility="visible"
        android:background="@drawable/picture"
        android:layout_marginLeft="15dp"
        android:layout_alignTop="@+id/secondimage"
        android:layout_toEndOf="@+id/secondimage"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/smallbox"
        android:id="@+id/activityname"
        android:hint="Activity"
        android:textColorHint="#CFCFCF"
        android:textSize="19dp"
        android:paddingStart="13dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/firstimage"
        android:layout_centerHorizontal="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/smallbox"
        android:layout_below="@+id/activityname"
        android:layout_alignStart="@+id/activityname"
        android:layout_alignEnd="@+id/activityname"
        android:id="@+id/linearLayout_forIcon">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/icontype"
            android:gravity="center"
            android:textColor="#CFCFCF"
            android:paddingStart="15dp"
            android:layout_gravity="center_vertical"
            android:textSize="19dp"
            android:text="Icon"
            />

        <Spinner
            android:id="@+id/spinnericon"
            android:layout_width="49dp"
            android:layout_marginLeft="230dp"
            android:layout_gravity="right|center_vertical"
            android:layout_height="match_parent" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/linearLayout_forIcon"
        android:background="@drawable/smallbox"
        android:layout_alignStart="@+id/linearLayout_forIcon"
        android:layout_alignEnd="@+id/linearLayout_forIcon"
        android:id="@+id/linearLayout">

        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/timetext"
            android:text="Time"
            android:textColor="#CFCFCF"
            android:gravity="center"
            android:paddingStart="15dp"
            android:textSize="19dp"
            android:layout_gravity="center_vertical"
            android:layout_height="match_parent" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/textview_for_day"
            android:hint="Day"
            android:textColor="#B5B5B5"
            android:textSize="12dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="30dp"
            android:gravity="center"
            />
        <Spinner
            android:layout_width="35dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:id="@+id/spinner_day">
        </Spinner>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/textfor_month"
            android:hint="Month"
            android:textColor="#B5B5B5"
            android:textSize="12dp"
            android:gravity="center"
            android:layout_gravity="center_horizontal"/>
        <Spinner
            android:layout_width="35dp"
            android:layout_height="match_parent"
            android:id="@+id/spinner_month"
            android:gravity="center"
            android:layout_gravity="center">

        </Spinner>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/textfor_year"
            android:hint="Year"
            android:textColor="#B5B5B5"
            android:textSize="12dp"
            android:gravity="center"
            android:layout_gravity="center"/>
        <Spinner
            android:layout_width="35dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:id="@+id/spinner_year">
        </Spinner>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:hint="Hour"
            android:textSize="12dp"
            android:textColor="#B5B5B5"
            android:gravity="center"
            android:id="@+id/textfor_hour"/>
        <Spinner
            android:layout_width="35dp"
            android:layout_height="match_parent"
            android:id="@+id/spinner_hour"
            >
        </Spinner>
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout"
        android:id="@+id/framelayoutfor_location"
        android:background="@drawable/bigbox"
        android:layout_alignStart="@+id/linearLayout"
        android:layout_alignEnd="@+id/linearLayout">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/location"
            android:textSize="19dp"
            android:textColor="#AFAFAF"
            android:text="Location"
            android:paddingStart="15dp"
            android:layout_marginTop="8dp"/>

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:id="@+id/checkBoxfro_current"
            android:text="Current"
            android:scaleX="0.60"
            android:textSize="21dp"
            android:layout_marginLeft="8dp"
            android:scaleY="0.60"
            android:textColor="#AEAEAE"
            android:layout_gravity="left|center_vertical"
            android:checked="false" />

        <EditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/textfor_address"
            android:layout_marginLeft="50dp"
            android:layout_gravity="center_horizontal|bottom" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:id="@+id/checkboxfor_address"
            android:text="Address"
            android:scaleX="0.60"
            android:textSize="21dp"
            android:layout_marginLeft="6dp"
            android:scaleY="0.60"
            android:textColor="#AEAEAE"
            android:layout_marginTop="55dp"
            android:layout_gravity="left"
            android:checked="false" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:background="@drawable/bigbox"
        android:layout_below="@+id/framelayoutfor_location"
        android:layout_alignStart="@+id/framelayoutfor_location"
        android:layout_alignEnd="@+id/framelayoutfor_location"
        android:id="@+id/linearLayout2">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Available for"
            android:textSize="19dp"
            android:textColor="#AFAFAF"
            android:layout_marginTop="8dp"
            android:paddingStart="15dp"
            android:id="@+id/textViewfor_availblefor" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:text="Everyone"
            android:scaleX="0.65"
            android:layout_marginLeft="6dp"
            android:checked="true"
            android:layout_marginTop="35dp"
            android:textSize="21dp"
            android:scaleY="0.65"
            android:textColor="#AFAFAF"
            android:id="@+id/checkBoxfor_everyone" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:text="Not everyone"
            android:scaleX="0.65"
            android:textSize="21dp"
            android:layout_marginTop="60dp"
            android:textColor="#AFAFAF"
            android:scaleY="0.65"
            android:id="@+id/checkBoxfor_noteveryone"
            android:layout_gravity="left|top" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Gender"
            android:layout_marginTop="12dp"
            android:gravity="center"
            android:textSize="16dp"
            android:textColor="#AFAFAF"
            android:layout_marginLeft="32dp"
            android:id="@+id/textViewfor_gender"
            android:layout_gravity="left|center_vertical" />

        <TextView
            android:layout_width="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_height="25dp"
            android:text="Age"
            android:layout_marginTop="35dp"
            android:textColor="#AFAFAF"
            android:layout_marginLeft="32dp"
            android:textSize="16dp"
            android:layout_gravity="left|center_vertical" />

        <SeekBar
            android:layout_width="310dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="22dp"
            android:layout_marginTop="58dp"
            android:id="@+id/seekBar_for_age"
            android:layout_gravity="left|center_vertical" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:text="Women"
            android:layout_marginLeft="150dp"
            android:scaleX="0.65"
            android:textSize="21dp"
            android:layout_marginTop="12dp"
            android:textColor="#AFAFAF"
            android:scaleY="0.65"
            android:id="@+id/checkBox5"
            android:layout_gravity="left|center_vertical" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Men"
            android:scaleX="0.65"
            android:textSize="21dp"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="12dp"
            android:textColor="#AFAFAF"
            android:scaleY="0.65"
            android:id="@+id/checkBox4"
            android:layout_gravity="left|center_vertical" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="25-30"
            android:textColor="#AFAFAF"
            android:layout_marginLeft="90dp"
            android:textSize="14dp"
            android:paddingStart="17dp"
            android:layout_marginTop="32dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/ageshowing_text"
            android:layout_gravity="left|center_vertical" />


    </FrameLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/smallbox"
        android:layout_below="@+id/linearLayout2"
        android:layout_alignStart="@+id/linearLayout2"
        android:layout_alignEnd="@+id/linearLayout2"
        android:id="@+id/linearLayout3">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="15dp"
            android:textSize="19dp"
            android:id="@+id/textfor_participationcost"
            android:textColor="#AFAFAF"
            android:layout_marginTop="10dp"
            android:layout_gravity="center_vertical"
            android:text="Participation cost"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/smallbox"
        android:layout_below="@+id/linearLayout3"
        android:layout_alignStart="@+id/linearLayout3"
        android:layout_alignEnd="@+id/linearLayout3"
        android:id="@+id/linearLayout4">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="15dp"
            android:textSize="19dp"
            android:textColor="#AFAFAF"
            android:id="@+id/textforparticipantlimit"
            android:layout_marginTop="10dp"
            android:layout_gravity="center_vertical"
            android:text="Participants number limit"/>

    </LinearLayout>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:id="@+id/enter_discription"
        android:background="@drawable/bigbox"
        android:hint="Enter Description"
        android:paddingStart="15dp"
        android:gravity="left|top"
        android:textColorHint="#A5A5A5"
        android:paddingTop="5dp"
        android:layout_below="@+id/linearLayout4"
        android:layout_alignStart="@+id/linearLayout4"
        android:layout_alignEnd="@+id/linearLayout4" />

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/createbutton"
        android:background="@drawable/create19"
        android:layout_alignTop="@+id/deletebutton"
        android:layout_alignEnd="@+id/enter_discription" />

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/deletebutton"
        android:layout_marginTop="15dp"
        android:background="@drawable/delete19"
        android:layout_below="@+id/enter_discription"
        android:layout_alignStart="@+id/enter_discription" />
</RelativeLayout>
    </LinearLayout>
    </ScrollView>

