<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#DAD7D7"
    tools:context="com.example.bts.joinme.Appsetting">




    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#fff"
        android:weightSum="1">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@drawable/grayback"
            android:layout_marginLeft="10dp"
            android:id="@+id/imageback" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="App Setting"
            android:textSize="18dp"
            android:textColor="#b1b0b0"
            android:paddingStart="8dp"
            android:id="@+id/textView10"
            android:layout_gravity="center"
            android:layout_weight="0.58" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="330dp"
        android:layout_height="55dp"
        android:background="@drawable/bigbox"
        android:layout_marginTop="50dp"
        android:layout_gravity="center_horizontal|top">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Show distance in"
            android:id="@+id/textView11"
            android:textSize="20dp"
            android:textColor="#BDBDBD"
            android:paddingStart="15dp"
            android:layout_gravity="center"/>



        <info.hoang8f.android.segmented.SegmentedGroup
            android:id="@+id/distance"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_gravity="right|center"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/miles"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Miles"
                android:layout_weight="1"
                style="@style/RadioButton" />

            <RadioButton
                android:id="@+id/km"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Km"
                android:layout_weight="1"
                style="@style/RadioButton" />


        </info.hoang8f.android.segmented.SegmentedGroup>

    </LinearLayout>

    <LinearLayout
        android:layout_width="330dp"
        android:layout_height="190dp"
        android:orientation="vertical"
        android:background="@drawable/bigbox"
        android:id="@+id/frameLayout_notification"
        android:layout_marginTop="109dp"
        android:layout_gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Notification"
            android:layout_margin="10dp"
            android:id="@+id/textView8" />


        <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Message"
                android:layout_marginLeft="10dp"
                android:id="@+id/message" />
            <Spinner
                android:id="@+id/spinner1"
                android:layout_width="133dp"
                android:layout_height="33dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:spinnerMode="dropdown" />
        </RelativeLayout>

        <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New activity near by"
                android:layout_marginLeft="10dp"
                android:id="@+id/near_by" />

            <com.kyleduo.switchbutton.SwitchButton
                android:id="@+id/near"
                style="@style/SwitchButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                app:kswTintColor="#076c3c"
                 />
        </RelativeLayout>

        <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Activity reminder"
                android:id="@+id/reminder" />
        </RelativeLayout>

        <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New level"
                android:layout_marginLeft="10dp"
                android:id="@+id/textView21" />
            <com.kyleduo.switchbutton.SwitchButton
                android:id="@+id/new_level"
                style="@style/SwitchButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                app:kswTintColor="#076c3c"
                />
        </RelativeLayout>



    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="330dp"
        android:layout_height="52dp"
        android:layout_marginTop="293dp"
        android:id="@+id/linearlayout_term"
        android:background="@drawable/bigbox"
        android:layout_gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Terms of service"
            android:textSize="18dp"
            android:textColor="#C3C3C3"
            android:layout_gravity="center"
            android:paddingStart="10dp"
            android:id="@+id/textView12" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="330dp"
        android:layout_height="52dp"
        android:layout_marginTop="351dp"
        android:background="@drawable/bigbox"
        android:layout_gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Log out"
            android:textColor="#B6B6B6"
            android:textSize="18dp"
            android:layout_gravity="center"
            android:paddingStart="10dp"
            android:id="@+id/textView13" />
    </LinearLayout>

    <Button
        android:layout_width="153dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/report"
        android:layout_marginTop="175dp"
        android:id="@+id/button11"/>

    <Button
        android:layout_width="153dp"
        android:layout_height="wrap_content"
        android:id="@+id/button12"
        android:background="@drawable/delete"
        android:layout_marginTop="230dp"
        android:layout_gravity="center"/>


</FrameLayout>
