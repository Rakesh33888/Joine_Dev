<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@mipmap/screenbg"
    android:orientation="vertical"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/ScrollView01"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars="none">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context="com.brahmasys.bts.joinme.Screen17"
        android:layout_gravity="center_horizontal">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="7dp"
            android:id="@+id/frameLayoutbck"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal|left">
            <LinearLayout
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:layout_gravity="left|center"
                android:id="@+id/backlayoutscreen17">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/backbtnimage"
                    android:clickable="false"

                    android:background="@drawable/backbtn"
                    android:layout_gravity="center|left"
                    android:layout_marginLeft="10dp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/underlinedText"
                    android:textColor="#ffffff"
                    android:id="@+id/reportactitytext"
                    android:clickable="true"
                    android:layout_weight="1"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/underlinedText1"
                    android:clickable="true"
                    android:layout_weight="1"
                    android:textColor="#ffffff"
                    android:layout_marginLeft="10dp"
                    android:textColorLink="#de212121"
                    android:id="@+id/updateactivitytext"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/delete_activity_text"
                    android:clickable="true"
                    android:layout_weight="1"
                    android:textColor="#ffffff"

                    android:layout_marginLeft="10dp"
                    android:textColorLink="#de212121"
                    android:id="@+id/delete_activitytext"
                    android:layout_marginRight="5dp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
       android:layout_width="fill_parent"
       android:layout_height="wrap_content"
       android:orientation="vertical"
       android:layout_margin="20dp">


        <android.support.v7.widget.CardView
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="250dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:layout_weight="0.20"
            android:id="@+id/frameLayout5"
            android:layout_below="@+id/frameLayoutbck"
            android:layout_centerHorizontal="true">
            <RelativeLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                xmlns:custom="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context="com.daimajia.slider.demo.MainActivity">
                <com.daimajia.slider.library.SliderLayout
                    android:id="@+id/slider"
                    android:layout_width="match_parent"
                    custom:pager_animation="Accordion"
                    custom:auto_cycle="true"

                    custom:indicator_visibility="visible"
                    custom:pager_animation_span="1100"
                    android:layout_height="270dp"/>

                <com.daimajia.slider.library.Indicators.PagerIndicator
                    android:id="@+id/custom_indicator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    custom:selected_color="#0095BF"
                    custom:unselected_color="#55333333"
                    custom:selected_drawable="@drawable/bird"
                    custom:shape="oval"
                    custom:selected_padding_left="5dp"
                    custom:selected_padding_right="5dp"
                    custom:unselected_padding_left="5dp"
                    custom:unselected_padding_right="5dp"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentBottom="true"
                    custom:selected_width="6dp"
                    custom:selected_height="6dp"
                    custom:unselected_width="6dp"
                    custom:unselected_height="6dp"
                    android:layout_marginBottom="20dp"
                    />



            </RelativeLayout>

        </android.support.v7.widget.CardView>


    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:id="@+id/frameLayoutactity"
        android:background="@drawable/smallbox1"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.06"
        android:layout_below="@+id/frameLayout5"
        android:layout_centerHorizontal="true"
        android:layout_alignStart="@+id/frameLayout5"
        android:layout_marginTop="20dp">

        <ImageView
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:id="@+id/imageViewrfting"
            android:foregroundGravity="center|left"
            android:layout_marginLeft="10dp"
            android:layout_gravity="left|center_vertical" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Today at 17:00"
            android:textSize="20dp"
            android:layout_marginBottom="10dp"
            android:id="@+id/timetextview"
            android:textColor="#FFFBFB"
            android:layout_marginRight="9dp"
            android:paddingRight="15dp"
            android:layout_gravity="right|center" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/acitvityname"
            android:singleLine="true"
            android:layout_marginLeft="90dp"
            android:textSize="25dp"
            android:layout_marginTop="4dp"
            android:textColor="#FFFBFB"
            android:text=""/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/distancefromnearby"
            android:layout_marginTop="58dp"
            android:textSize="20dp"
            android:minLines="1"
            android:maxLines="2"
            android:layout_marginRight="9dp"
            android:layout_marginBottom="5dp"
            android:textColor="#FFFBFB"
            android:layout_marginLeft="90dp"
            android:text=""
            android:layout_gravity="left" />

            </FrameLayout>
            <FrameLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="#24ededed"
                android:id="@+id/createrprlfram"
                android:layout_gravity="center"
                android:layout_weight="0.06"
                android:layout_below="@+id/frameLayoutactity"
                android:layout_alignStart="@+id/frameLayoutactity"
                android:layout_marginTop="20dp">

                <com.github.siyamed.shapeimageview.CircularImageView
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:id="@+id/createrimage"
                    android:clickable="true"
                    android:layout_marginTop="7dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginBottom="7dp"
                    android:src="@drawable/butterfly"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Created by "
                    android:layout_marginLeft="130dp"
                    android:layout_marginTop="15dp"
                    android:singleLine="true"
                    android:textColor="#FFFBFB"
                    android:textSize="20dp"
                    android:id="@+id/textView9"
                    android:layout_gravity="left|top" />

                <RatingBar
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/myRatingBar"
                    android:layout_marginLeft="130dp"
                    android:progressTint="@color/ratingbar"
                    android:clickable="false"
                    android:layout_marginTop="25dp"
                    android:stepSize="0.5"
                    android:isIndicator="true"
                    android:numStars="5"
                    style="?android:attr/ratingBarStyleSmall"
                    android:layout_gravity="left|center_vertical" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:layout_marginLeft="40dp"
                    android:singleLine="true"
                    android:layout_marginTop="25dp"
                    android:textColor="#D8CEC5"
                    android:id="@+id/reviews"
                    android:layout_gravity="center"
                    android:textSize="20dp" />


            </FrameLayout>

        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#24ededed"
            android:layout_marginTop="20dp"
            android:id="@+id/listactivityframe"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.25"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/createrprlfram"
            android:layout_centerHorizontal="true">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/peoples"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="19dp"
                android:src="@drawable/peoples"
                android:layout_gravity="left|top" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Up to 0 People:"
                android:id="@+id/uptopeoples"
                android:singleLine="true"
                android:textSize="20dp"
                android:textColor="#FFFBFB"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="40dp"
                android:layout_gravity="left|top" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Currently have 0"
                android:textColor="#FFFBFB"
                android:textSize="20dp"
                android:singleLine="true"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="35dp"
                android:id="@+id/currentpeoples"
                android:layout_gravity="center_horizontal|top" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/moneyicon"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="45dp"
                android:src="@drawable/money"
                android:layout_gravity="left" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cost $0"
                android:textColor="#FFFBFB"
                android:textSize="20dp"
                android:singleLine="true"
                android:layout_marginTop="42dp"
                android:layout_marginLeft="40dp"
                android:id="@+id/costtext"
                android:layout_gravity="left|top" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/clockicon"
                android:src="@drawable/clock"
                android:layout_marginLeft="19dp"
                android:layout_marginTop="80dp"
                android:layout_gravity="left|top" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Description"
                android:id="@+id/timetext"
                android:textSize="20dp"

                android:layout_marginLeft="40dp"
                android:layout_marginTop="75dp"
                android:textColor="#FFFBFB"
                android:layout_gravity="left|top"
                android:layout_marginBottom="30dp" />

            <!--<TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="United fans are not allowed!"
                android:textColor="#FFFBFB"
                android:textSize="20dp"
                android:singleLine="true"
                android:layout_marginTop="75dp"
                android:layout_marginLeft="90dp"
                android:id="@+id/fanstext"
                android:layout_gravity="center_horizontal|top" />
                -->
        </FrameLayout>

   </LinearLayout>
    </RelativeLayout>

    </ScrollView>

</LinearLayout>
