<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="550dp"
    android:background="#fff"
    android:layout_gravity="center"
    android:layout_height="700dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginTop="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="85dp"
            android:textSize="30dp"
            android:id="@+id/congatulaton_text"
            android:gravity="center"
            android:textColor="#f4717171"
            android:text="Congratulation,you have completed an activity - Rafting!"
            />

    </RelativeLayout>
    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:layout_height="wrap_content">
        <com.github.siyamed.shapeimageview.CircularImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/image_activity_congatulation"
            android:visibility="visible"
            android:src="@drawable/butterfly"
            />
    </FrameLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Who showed up ?"
            android:gravity="left"
            android:id="@+id/whoshowedup_congratulation"
            android:textColor="#f4717171"
            android:layout_marginLeft="15dp"
            android:textSize="25dp"
            />
    </RelativeLayout>
    <ListView
        android:layout_width="wrap_content"
        android:layout_height="162dp"
        android:id="@+id/peoples_who_showed"

        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"

        android:layout_above="@+id/linearLayout" />
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_gravity="center_horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="26dp"
            android:id="@+id/activity_canceled_congatulation"
            android:text="@string/text4"/>

    </RelativeLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_marginTop="5dp"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="@string/text2"
            android:layout_marginLeft="15dp"
            android:gravity="center"
            android:textSize="26dp"
            android:layout_gravity="left|center"
            android:id="@+id/remindme_congratulation"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:textSize="26dp"
            android:id="@+id/skip_congatulation"
            android:gravity="center"
            android:text="@string/text3"
            />
        <Button
            android:layout_width="130dp"
            android:layout_height="60dp"
            android:text="submit"
            android:textSize="25dp"
            android:layout_marginRight="15dp"
            android:textColor="#fff"
            android:background="@drawable/custom_button1"
            android:id="@+id/submitte_congratulation"
            android:layout_gravity="center|right"/>

    </FrameLayout>



</LinearLayout>