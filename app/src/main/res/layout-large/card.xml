<RelativeLayout
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="@android:color/transparent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <android.support.v7.widget.CardView
        android:layout_height="300dp"
        android:layout_width="match_parent"
        xmlns:android="http://schemas.android.com/apk/res/android">

        <ImageView android:id="@+id/textViewCard"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:gravity="center"/>


    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_height="300dp"
        android:layout_width="match_parent"
        android:background="#bfcacaca"
        android:layout_marginTop="340dp"
        xmlns:android="http://schemas.android.com/apk/res/android">

        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="90dp"
            android:background="#bfcacaca"
            android:layout_below="@+id/swipeStack"
            android:id="@+id/frameLayout2"
            android:layout_alignEnd="@+id/swipeStack"
            android:layout_alignStart="@+id/swipeStack">

            <ImageView
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:id="@+id/imageView4"
                android:layout_marginLeft="25dp"
                android:layout_gravity="center_vertical"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Rafting"
                android:singleLine="true"
                android:id="@+id/textView14"
                android:layout_marginLeft="100dp"
                android:textSize="23dp"
                android:textColor="#FFF"
                android:layout_gravity="left|center" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="15dp"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Small Text"
                android:singleLine="true"
                android:textSize="20dp"
                android:paddingStart="35dp"
                android:textColor="#FFF"

                android:layout_marginRight="12dp"
                android:id="@+id/textView15"
                android:layout_marginTop="8dp"
                android:layout_gravity="right|bottom" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Small Text1"
                android:textSize="20dp"
                android:singleLine="true"
                android:layout_marginRight="12dp"
                android:paddingStart="35dp"
                android:paddingTop="4dp"
                android:textColor="#FFF"
                android:id="@+id/textView16"
                android:layout_gravity="right|top" />
        </FrameLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>