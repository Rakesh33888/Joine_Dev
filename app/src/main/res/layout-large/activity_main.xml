<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/screen2bg"
    tools:context="com.brahmasys.bts.joinme.MainActivity">


    <TextView
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:background="@drawable/joinme"
        android:id="@+id/textView"
        android:textSize="20dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="79dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign up with"
        android:textSize="40dp"
        android:textColor="#FDFCFE"
        android:id="@+id/textView2"
        android:layout_marginBottom="196dp"
        android:layout_above="@+id/frameLayout"
        android:layout_centerHorizontal="true" />

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:background="@drawable/memberbg"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:id="@+id/frameLayout"
        android:layout_alignParentEnd="true">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Already a Member"
            android:textColor="#f1e4e4e4"
            android:textSize="25sp"
            android:background="@null"
            android:textAllCaps="false"
            android:id="@+id/btn3"
            android:layout_gravity="center" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageViewarrow"
            android:layout_marginTop="2dp"
            android:layout_marginRight="90dp"
            android:src="@drawable/arrowright"
            android:layout_gravity="right|center_vertical" />

    </FrameLayout>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/facebook"
        android:id="@+id/facebook"
        android:layout_marginTop="68dp"
        android:layout_alignTop="@+id/textView2"
        android:layout_alignEnd="@+id/textView"
        android:layout_marginRight="20dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/mail"
        android:id="@+id/mail"
        android:layout_alignTop="@+id/facebook"
        android:layout_alignStart="@+id/textView2"
        android:layout_marginLeft="20dp" />

</RelativeLayout>
